<% @user ||= current_user %>

<div class="stats">
  <div>
    <span class="stat">
      <%= "投稿#{@user.microposts.count}件" %>
    </span>
  </div>
  <a href="<%= following_user_path(@user) %>">
    <span id="following" class="stat">
      <%= "#{@user.following.count}人をフォロー中" %>
    </span>
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <span id="followers" class="stat">
      <%= "フォロワー#{@user.followers.count}人"%>
    </span>
  </a>
  <a href="<%= favorites_user_path(@user) %>">
    <span id="favorites" class="stat">
      <%= "#{@user.favorites.count}お気に入り" %>
    </span>
  </a>
</div>
