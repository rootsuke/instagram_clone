<%= provide(:title, @user.name) %>
<%= hidden_field :user, :id %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user, size: 150 %>
        <%= @user.name %>
      </h1>
      <p><%= @user.full_name %></p>
      <p><%= @user.self_introduction %></p>
      <p><%= @user.website %></p>

      <% if current_user?(@user) %>
        <a href="<%= edit_user_path %>" class="btn btn-default">プロフィールを編集する</a>
      <% end %>

    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>



    <%= render "follow_form" if logged_in? %>
    <!-- <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %> -->

    <div class="row">
      <% if @user.microposts.any? %>
        <% @microposts.each do |micropost| %>
          <% if micropost.picture? %>
          <div class="col-xs-4">
            <div>
              <%= link_to image_tag(micropost.picture.url, class: "thumnail"), micropost_path(micropost) %>
            </div>
            <div>
              <%= micropost.content %>
            </div>
          </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>

</div>
