<li id="micropost-<%= micropost.id %>">
  <div class="profile">
    <%= link_to gravatar_for(micropost.user, size: 40), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  </div>
  <div class="micropost">
    <%= micropost.content %>
  </div>
  <div>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </div>

  <div id="favorite_btn">
    <% if current_user.favorite?(micropost) %>
      <%= link_to fa_icon("star 2x yellow"), favorite_path(Favorite.find_by(favorite_post_id: micropost.id)), method: :delete, remote: true %>
    <% else %>
      <%= link_to fa_icon("star 2x light-gray"), favorites_path(params: {post_id: micropost.id}),method: :post, remote: true %>
    <% end %>
  </div>
  <!-- <p>お気に入り <span id="favorites-count"><%= micropost.favorite_users.count %></span>件</p> -->
  <p id="favorites-count">お気に入り <%= micropost.favorite_users.count %>件</p>

  <div class="comments">
    comments...
  </div>

  <div class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </div>
  <% if current_user?(micropost.user) %>
    <%= link_to "delete", micropost, method: :delete, data: {confirm: "You sure?"}, class: "del" %>
  <% end %>

  <div class="comment-form">
    comment-form...

  </div>

</li>
