<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-8 col-md-offset-2">

    <div class="row user-profile">
      <div class="col-xs-4">
        <%= gravatar_for @user, size: 150 %>
      </div>

      <div class="col-xs-8">
        <section class="user_info">
          <h3><%= @user.name %></h3>
          <span><%= link_to("View my profle", @user) %></span>
          <section>
            <%= render "shared/stats" %>
          </section>
        </section>
      </div>
    </div>

    <div class="col-md-6 col-md-offset-3">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
      <% end %>
      <%= will_paginate %>
    </div>

  </aside>



</div>
