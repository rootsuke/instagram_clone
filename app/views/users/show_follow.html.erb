<% provide("title", @title) %>

<div class="row">

  <aside class="col-md-8 col-md-offset-2">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to("View my profle", @user) %></span>
      <span><b>microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>

  <div class="col-md-8 col-md-offset-2">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
    <%= will_paginate %>
  </div>

</div>
