<li id="micropost-<%= micropost.id %>">
  <div class="profile">
    <%= link_to gravatar_for(micropost.user, size: 40), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  </div>
  <div class="micropost">
    <%= micropost.content %>
  </div>
  <div>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </div>
  <div>
    <%= render "shared/favorite_button", post: micropost %>
    <!-- <%= link_to fa_icon("star 2x light-gray"), favorite_micropost_path(micropost), method: :post %> -->
  </div>
  <div class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </div>
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete, data: {confirm: "You sure?"}, class: "del" %>
    <% end %>

</li>
