<%= provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user, size: 150 %>
        <%= @user.name %>
      </h1>
      <p><%= @user.full_name %></p>
      <p><%= @user.self_introduction %></p>
      <p><%= @user.website %></p>
      <span class="btn btn-default"> <%= link_to "プロフィールを編集", edit_user_path %> </span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>

</div>
